<%= form_for [current_user, @gadget] do |f| %>  
  <div class="form-group">
    <%= f.label :name%>
      <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :description%>
      <%= f.text_area :description, class: "form-control", rows: "4", required: true %>
  </div>
  <div class="form-group">
      <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>